<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Vehicle.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Vehicle"
    Shell.FlyoutBehavior="Flyout"
    Title="Vehicle">
   

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#1976d2" Padding="10">
            <Label Text="PUNDERO" TextColor="White" FontSize="24" VerticalOptions="Center" />
        </Grid>
    </Shell.FlyoutHeader>
    

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
    Title="Invoice"
    ContentTemplate="{DataTemplate local:InvoicePage}"
    Route="InvoicePage" />
    <ShellContent
    Title="In-Transit Invoices"
    ContentTemplate="{DataTemplate local:InTransitInvoicePage}"
    Route="InTransitInvoicePage" />
    <ShellContent
    Title="Map"
    ContentTemplate="{DataTemplate local:MapPage}"
    Route="MapPage" />

</Shell>
